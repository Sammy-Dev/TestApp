<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_quiz_page">

    <TextView
        android:id="@+id/textTitleHello"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:text="Hello User"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/maths"
        android:layout_width="285dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textTitleHello"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:backgroundTint="#00BCD4"
        android:text="Mathematical Reasoning quiz"
        android:textSize="22dp" />

    <Button
        android:id="@+id/thinking"
        android:layout_width="285dp"
        android:layout_height="100dp"
        android:textSize="22dp"
        android:text="Thinking Skills Quiz"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/maths"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#00BCD4"
        />

    <Button
        android:id="@+id/reading"
        android:layout_width="285dp"
        android:layout_height="100dp"
        android:textSize="22dp"
        android:text="Reading Quiz"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/thinking"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#00BCD4"
        />

    <Button
        android:id="@+id/pastScores"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="show past scores"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/reading"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#4000BCD4"
        />

    <Button
        android:id="@+id/tutorial"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Quiz Instructions"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/pastScores"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#4000BCD4"
        />

    <Button
        android:id="@+id/logOutOfUserAccount"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Log Out"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tutorial"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#EC407A"
        />

</RelativeLayout>