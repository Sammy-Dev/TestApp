<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/questionTitle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="0dp"
        android:text="Question:"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/questionContent"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:text="question content"
        android:textSize="24dp"
        android:layout_below="@+id/questionTitle"/>

    <TextView
        android:id="@+id/answerTitle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:text="Type Answer:"
        android:textSize="30dp"
        android:layout_below="@+id/questionContent"/>

    <EditText
        android:id="@+id/answerContent"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="40dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_below="@+id/answerTitle"/>

    <Button
        android:id="@+id/submitAnswerButton"
        android:layout_width="245dp"
        android:layout_height="80dp"
        android:layout_below="@+id/answerContent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:backgroundTint="#00BCD4"
        android:text="Submit Answer"
        android:textSize="22dp" />


</RelativeLayout>